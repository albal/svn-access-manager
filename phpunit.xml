<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="tests/bootstrap/bootstrap.php" backupGlobals="false">
	<testsuites>
		<testsuite name="Application Test Suite">
			<directory>./tests/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory suffix=".php">../include/adodb5/</directory>
			<directory>../help/</directory>
			<directory>../lib/</directory>
			<directory suffix=".php">../tests/</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-clover" target="../reports/coverage/coverage.xml" />
		<log type="junit" target="../reports/coverage/execution.xml"
			logIncompleteSkipped="false" />
	</logging>
	<php>
		<includePath>./config/:./include/:../config/:../include/</includePath>

		<var name="DB_DSN" value="mysql:dbname=your test db name here;host=localhost" />
		<var name="DB_USER" value="you user here" />
		<var name="DB_PASSWD" value="your password here" />
		<var name="DB_DBNAME" value="your test db name here" />
		<var name="DB_HOST" value="localhost" />
		<var name="DB_TYPE" value="mysqli" />
		<var name="DB_TEST_DATE" value="20180102" />

		<server name="HTTP_HOST" value="localhost" />
		<server name="PHP_SELF" value="meandyou.php" />
		<server name="HTTP_ACCEPT_LANGUAGE" value="de_DE" />
		<server name="REMOTE_ADDR" value="127.0.0.1" />
		
		<const name="SVNSESSID" value="SVNSESSID" />
	</php>
</phpunit>